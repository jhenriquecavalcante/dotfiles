alias ls='ls --color=auto'                  # colorful ls
alias lf='lfrun'                            # prettier lf
alias cp="cp -i"                            # confirm before overwriting something
alias rm='rm -Iv'                           # interactive and verbose
alias df='df -h'                            # human-readable sizes
alias free='free -m'                        # show sizes in MB
alias fcd='cd "$(find ~/ -type d | fzf)"'   # fuzzy change directory

alias dur='exiftool -T -Duration -Filename' # show file's duration
alias sxiv='sxiv -b'                        # no bottom status bar

alias grep='grep --colour=auto'             # colorful
alias egrep='egrep --colour=auto'           # colorful
alias fgrep='fgrep --colour=auto'           # colorful
alias np='nano -w PKGBUILD'

alias matrix='neo-matrix -c green3 -S 12 -d 3 -r 0 -m "hello_friend"'
